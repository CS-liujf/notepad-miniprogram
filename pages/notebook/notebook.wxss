/* pages/notebook/notebook.wxss */
#head-view {
    display: flex;
    flex-direction: column;
    align-items: center;
}

#head {
    font-size: 120rpx;
    font-weight: normal;
    color: rgba(175, 47, 47, .8);
}

.input {
    margin-top: 80rpx;
    width: 100%;
    background-color: rgb(245, 245, 245);
    height: calc(60/375*750rpx) !important;
    font-size: calc(28/375*750rpx) !important;
    font-weight: normal !important;
    border-bottom: 1px solid gray;
    border-top: 1px solid gray;
}

.footer-view {
    display: flex;
    flex-direction: column;
    justify-content: column;
    align-items: center;
}

.li-item {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    /* margin-top: 40rpx; */
    height: 90rpx;
    border-bottom: 1.4rpx solid rgb(243, 235, 235);
}

.delete-button {
    margin-right: 10rpx;
}


.li-text {
    margin-left: 10rpx;
    font-size: calc(20/375*750rpx);
}

#left-text {
    margin-top: calc(20/375*750rpx);
    font-size: calc(15/375*750rpx);
    color: rgb(184, 184, 184);
    /* margin-left: calc(10/375*750rpx); */
}

.clear-button {
    width: 750rpx;
}

#clear-text {
    font-size: calc(20/375*750rpx);
    letter-spacing: 50rpx;
    margin-left: 50rpx;
}